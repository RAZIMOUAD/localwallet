<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.AuthController">
    <top>
        <Label text="Inscription" style="-fx-font-size: 24px; -fx-font-weight: bold;" alignment="CENTER" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <TextField fx:id="registerUsernameField" promptText="Nom d'utilisateur" />
            <PasswordField fx:id="registerPasswordField" promptText="Mot de passe" />
            <Button text="S'inscrire" onAction="#register" />
            <Text fx:id="registerFeedbackText" style="-fx-fill: red;" />
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER" style="-fx-padding: 10;">
            <Label text="Déjà un compte ?" />
            <Button text="Se connecter" onAction="#goToLogin" />
        </HBox>
    </bottom>
</BorderPane>
